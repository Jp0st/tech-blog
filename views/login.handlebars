<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header blog-bg text-light">
          Login
        </div>
        <div class="card-body">
          <form class="login-form">
            <div class="form-group">
              <label for="username-login">Username</label>
              <input
                type="text"
                class="form-control"
                id="username-login"
                aria-describedby="emailHelp"
                placeholder="Enter username"
              />
            </div>
            <div class="form-group mb-2">
              <label for="password-login">Password</label>
              <input
                type="password"
                class="form-control"
                id="password-login"
                placeholder="Password"
              />
            </div>
            <button type="submit" class="btn btn-primary blog-bg text-light">Login</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header blog-bg text-light">
          Register
        </div>
        <div class="card-body">
          <form class="signup-form">
            <div class="form-group">
              <label for="username-signup">Username</label>
              <input
                type="text"
                class="form-control"
                id="username-signup"
                placeholder="Enter username"
              />
            </div>
            <div class="form-group mb-2">
              <label for="password-signup">Password</label>
              <input
                type="password"
                class="form-control"
                id="password-signup"
                placeholder="Password"
              />
            </div>
            <button type="submit" class="btn btn-primary blog-bg text-light">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>
<script src="/js/signup.js"></script>