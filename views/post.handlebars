<div class="container my-4">
  <div class="card">
    <div class="card-heade blog-bg text-light">
      <h3 class="card-title text-center">{{post.title}}</h3>
    </div>
    <div class="card-body">
      <p class="card-text">{{post.content}}</p>
    </div>
    <div class="card-footer">
      <p><strong>Created by: </strong>{{post.user.username}}
        <strong>Created on: </strong>{{format_date post.createdAt}}</p>
    </div>
  </div>
</div>

<div class="container my-4">
  <div class="card">
    <div class="card-header blog-bg text-light">
      <h3 class="card-title text-center">{{post.title}}</h3>
    </div>
    <div class="card-body">
      <p class="card-text">{{post.content}}</p>
    </div>
    <div class="card-footer">
      <p><strong>Created by:</strong> {{post.user.username}}
        <strong>Created on:</strong> {{format_date post.createdAt}}</p>
    </div>
  </div>
</div>

<div class="container my-4">
  <div class="row">
    <div class="col-md-6">
      {{#if post.comments.length}}
        <h3 class="text-center">Comments</h3>
        {{#each post.comments}}
          <div class="card mb-4">
            <div class="card-header blog-bg text-light">
              <h3 class="card-title">{{this.user.username}}</h3>
            </div>
            <div class="card-body">
              <p class="card-text">{{this.comment}}</p>
            </div>
            <div class="card-footer">
              <p><strong>Created on:</strong> {{format_date createdAt}}</p>
            </div>
          </div>
        {{/each}}
      {{/if}}
    </div>

    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header blog-bg text-light">
          <h3>Leave your comment here</h3>
        </div>
        <div class="card-body">
          <textarea
            id="comment-content"
            class="form-control"
            rows="2"
          ></textarea>
          <button class="btn blog-bg text-light btn-primary mt-4" id="submit-comment" data-id="{{post.id}}">Submit</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/comments.js"></script>